<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Подробности проживания"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/guest"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_guest"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/guestNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 гостя, 1 ночь"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/guest"
            app:layout_constraintTop_toTopOf="@+id/guest" />

        <TextView
            android:id="@+id/guestCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 взрослых"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/guest"
            app:layout_constraintTop_toBottomOf="@+id/guestNight" />

        <ImageView
            android:id="@+id/checkIn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_check_in"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/guest" />

        <TextView
            android:id="@+id/checkInText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заезд 16 мая, воскресенье"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/checkIn"
            app:layout_constraintTop_toTopOf="@+id/checkIn" />

        <TextView
            android:id="@+id/checkInInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="После 14:00, работает 24 часа"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/checkIn"
            app:layout_constraintTop_toBottomOf="@+id/checkInText" />

        <ImageView
            android:id="@+id/checkOut"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_check_out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/checkIn" />

        <TextView
            android:id="@+id/checkOutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заезд 16 мая, воскресенье"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/checkOut"
            app:layout_constraintTop_toTopOf="@+id/checkOut" />

        <TextView
            android:id="@+id/checkOutInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="После 14:00, работает 24 часа"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/checkOut"
            app:layout_constraintTop_toBottomOf="@+id/checkOutText" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>